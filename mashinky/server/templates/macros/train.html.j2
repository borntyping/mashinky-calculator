{% macro weight(train) -%}
  {% set empty = train.is_over_recommended_weight_empty() %}
  {% set full = train.is_over_recommended_weight_full() %}
  <span class="text-truncate">
    {% if empty or full %}
      <span>⚠</span>
    {% endif %}
    <span>
      {%- if empty -%}
        <span class="text-red" title="Weight when empty.&#10;Train is over the recommended weight when empty.">{{ train.weight_empty }}</span>
      {%- else -%}
        <span class="" title="Weight when empty.&#10;Train is under the recommended weight when empty.">{{ train.weight_empty }}</span>
      {%- endif -%}
      &ndash;
      {%- if full -%}
        <span class="text-red" title="Weight when full. Train is over the recommended weight when full.">{{ train.weight_full }}</span>
      {%- else -%}
        <span class="" title="Weight when full. Train is under the recommended weight when full.">{{ train.weight_full }}</span>
      {%- endif -%}
    </span>
    <span class="text-turquoise" title="Recommended weight">({{ train.recommended_weight }})</span> tons
  </span>
{%- endmacro %}

{% macro length(train, options) -%}
  {% set long = train.length > options.station_length_long %}
  {% set short = train.length > options.station_length_short %}
  <span class="text-truncate {% if long %}text-red{% elif short %}text-fushia{% endif %}" title="Train is {{ "%.2f"|format(train.length) }} tiles long.
    {%- if short -%}
    &#10;Train will not fit in a short station ({{ options.station_length_short }} tiles).
    {%- endif -%}
    {%- if long -%}
    &#10;Train will not fit in a long station ({{ options.station_length_long }} tiles).
    {%- endif -%}
  ">{% if long %}⚠{% endif %} {{ "%.2f"|format(train.length) }} tiles</span>
{%- endmacro %}
