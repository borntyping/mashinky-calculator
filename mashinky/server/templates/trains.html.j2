{% extends '_base.html.j2' %}{% import '_macros.html.j2' as macros %}{% import '_macros_wagon_type.html.j2' as macros_wagon_type %}
{% block page %}
  <section class="">
    <h1>Trains {{ macros.count(trains) }}</h1>

    <table class="table table-sm table-hover table-responsive align-middle">
      <thead class="thead-light">
      <tr>
        <th class="text-center">Epoch</th>
        <th>Engine</th>
        <th>Wagon</th>
        <th>Train</th>
        <th class="text-end">Weight</th>
        <th class="text-end">Length</th>
        <th>Cargo</th>
        <th class="text-end">Limits</th>
      </tr>
      </thead>
      <tbody class="table-group-divider">
      {% for train in trains %}
        <tr>
          <td class="text-center">{{ macros_wagon_type.epoch(train) }}</td>
          <td>{{ macros_wagon_type.name(train.engine) }}</td>
          <td>{{ macros_wagon_type.name(train.wagon) }}</td>
          <td class="w-50">
            {% for wagon_type in train %}
              {{ macros_wagon_type.icon(wagon_type) }}
            {% endfor %}
          </td>
          <td class="text-end">{{ macros_wagon_type.weight(train) }}</td>
          <td class="text-end">{{ macros_wagon_type.length(train) }}</td>
          <td>{{ macros_wagon_type.cargo(train) }}</td>
          <td class="text-end">{{ macros_wagon_type.limits(train) }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </section>
{% endblock %}
